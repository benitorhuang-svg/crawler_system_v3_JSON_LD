{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Company",
    "description": "Standardized Company Schema based on internal requirements",
    "type": "object",
    "properties": {
        "platform": {
            "type": "string",
            "enum": [
                "platform_104",
                "platform_1111",
                "platform_cakeresume",
                "platform_yes123",
                "platform_yourator",
                "platform_unknown"
            ],
            "description": "The source platform of the company"
        },
        "source_id": {
            "type": "string",
            "description": "Platform-specific company ID"
        },
        "name": {
            "type": "string",
            "description": "Company name"
        },
        "company_url": {
            "type": [
                "string",
                "null"
            ],
            "format": "uri"
        },
        "company_web": {
            "type": [
                "string",
                "null"
            ],
            "format": "uri"
        },
        "address": {
            "type": [
                "string",
                "null"
            ]
        },
        "capital": {
            "type": [
                "string",
                "null"
            ]
        },
        "employee_count": {
            "type": [
                "string",
                "null"
            ]
        },
        "description": {
            "type": [
                "string",
                "null"
            ]
        }
    },
    "required": [
        "platform",
        "source_id",
        "name"
    ]
}